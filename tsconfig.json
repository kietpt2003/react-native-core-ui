{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@constants": ["constants/index"],
      "@utils": ["utils/index"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
